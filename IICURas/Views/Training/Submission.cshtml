@model IICURas.Models.SubmissionViewModel

@{
    ViewBag.Title = "Submission Successful";
}
 
<section class="col-xs-12">
    @if (Model.Pass)
    {
        <h1 class="green manul-center center-block"><i class="fa fa-check">&nbsp</i>You passed! Great job!</h1> 
    }
    else if(Model.Percentage > 70)
    {
        <h2 class="manul-center blue">Almost there. Please try again.</h2> 
    }
    else 
    {   
         <h2 class="manul-center blue">You did not pass this training test. Please try again.</h2> 
    }

    <br />
    <h4 class="manul-center">Your scored @Model.Points over @Model.TotalPoints ( @Html.DisplayFor(m => m.Percentage) )</h4>

    <br />
    <div class="col-md-offset-2 col-md-4 whitefont">
        <a class="btn btn-info  whitefont btn-lg" href="@Url.Action("Transcript", new { trainingReviewid = Model.TraningReviewID })"><i class="fa fa-file-text-o"></i>&nbsp View Correct Answers</a>
    </div>
    <div class="col-md-offset-0 col-md-4 whitefont">
        <a class="btn btn-primary whitefont btn-lg" href="@Url.Action("NewTraining")"><i class="fa fa-pencil-square-o"></i>&nbsp Review Another Manuscript</a>
    </div>
    <div class="col-md-2"></div>
</section>

