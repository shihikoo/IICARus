@model IICURas.Models.TrainingInputModel

@{
    ViewBag.Title = "New Training";
}

<div class="col-md-6">
    <h3>@Html.DisplayNameFor(model => model.PubNumber):
        @Html.DisplayFor(model => model.PubNumber)</h3>
</div>

<div class="col-md-6">
    @Html.Partial("_readFiles", Model.Files)

</div>

<div class="col-xs-12">
    @Html.Partial("_review", Model.TrainingReviewItems)
</div>

<div class="col-xs-12">
    <br />
    <br />
    <br />
    <a class="btn btn-default btn-lg" onclick="window.history.back()">Back</a>
</div>

@section scripts{
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover({ html: true });
        })
    </script>
}
