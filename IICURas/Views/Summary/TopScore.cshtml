@model IICURas.Models.LeaderboardViewModel

@{
    var i = 0;
}

<div class="col-xs-12 col-xs-6">
    <div class="col-xs-12">
        <h2 class="text-info bold text-center "><i class="fa fa-trophy"></i>&nbsp Review Leaderboard &nbsp <i class="fa fa-trophy">&nbsp </i>&nbsp
        </h2>

    </div>
    <div class="col-xs-12 table-responsive">
        <table class="table table-striped text-center">
            <tr>
                <th class="text-center">Rank</th>
                <th class="text-center">Name</th>
                <th class="text-center">Review #</th>
                <th class="text-center">Latest active time</th>
            </tr>
            @{i = 1;}
            @foreach (var item in Model.ReviewTopScore)
            {
                var colorstyle = "";
                if (item.Points >= 10)
                {
                    colorstyle = "blue bold";
                }

                <tr>
                    <td class="text-center">@i</td>
                    <td class="text-center">
                        @Html.DisplayFor(itemmodel => item.UserName)
                        @if (item.CompleteTraining)
                        {
                            <i class="fa fa-check-circle green"></i>}

                        @switch (i)
                        {
                            case 1:
                                <i class="fa fa-trophy gold"></i>
                                colorstyle = "gold bold";
                                break;
                            case 2:
                                <i class="fa fa-trophy silver"></i>
                                colorstyle = "silver bold";

                                break;
                            case 3:
                                <i class="fa fa-trophy bronze"></i>
                                colorstyle = "bronze bold";

                                break;
                        }
                    </td>

                    <td class="text-center @colorstyle">
                        @Html.DisplayFor(itemmodel => item.Points)
                    </td>
                    <td class="text-center">@Html.DisplayFor(itemmodel => item.LastActiveTime)</td>
                </tr>
                i++;
            }
        </table>
    </div>
</div>

