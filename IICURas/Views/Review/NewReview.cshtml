@model IICURas.Models.ReviewInputModel

@{
    ViewBag.Title = "New Review";
}

<div class="col-md-6">
    <h3>@Html.DisplayNameFor(model => model.RecordID):
        @Html.DisplayFor(model => model.RecordID)</h3>
    <p>
        <span class="bold">
        @Html.DisplayNameFor(model => model.COI):
        </span>
            @Html.DisplayFor(model => model.COI)
</p>
    <p>
        <span class="bold">
            @Html.DisplayNameFor(model => model.Funding):
        </span>
            @Html.DisplayFor(model => model.Funding)
    </p>
</div>

<div class="col-md-6">
    @Html.Partial("_readFiles", Model.Files)
</div>

<div class="col-xs-12">
    @Html.Partial("_review")
</div>

<div class="col-xs-12">
    <br />
    <br />
    <br />
    <a class="btn btn-default btn-lg" onclick="window.history.back()">Back</a>

</div>

@section css {
    @Styles.Render("~/Content/chosencss")
}

@section Scripts {     
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover({ html: true })
        })
    </script>
}