@model IICURas.Models.ReconReviewInputModel

@using (Html.BeginForm())
{
    var speciesStyle = (Model.r1Species == Model.r2Species) ? "green":"red";

        @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.RecordID)
    @Html.HiddenFor(m => m.ReviewCompleteID)

    <div class="col-xs-12">
        <button id="Save" type="submit" class="btn btn-warning btn-lg pull-right col-xs-offset-8 colo-xs-4" name="Save">
        &nbsp;Save&nbsp;</button>
        <br/><br />   <br />
    </div>

    <div class="col-xs-12">
        <div class="col-xs-12 ">
            <div class="sectionTitle">
                <h4>SPECIES </h4> 
            </div>
        </div>
        <div class="col-xs-12">
            <h5><strong>0.1 What animal species are used in this research? </strong></h5>
        </div>
        <div class="col-xs-12">
            <div class="col-md-4 @speciesStyle">
                @Html.DisplayFor(m => m.r1Species)
            </div>
            <div class="col-md-4 @speciesStyle">
                @Html.DisplayFor(m => m.r2Species)
            </div>
            <div class="col-md-4">
                @Html.ListBoxFor(m => m.SpeciesIDs, Model.SpecieList, new { @class = "selectpicker", title = " " })
                @Html.ValidationMessageFor(model => model.SpeciesIDs)
            </div>
            <br />
            <br />
        </div>
        @Html.EditorFor(m => m.ReviewItems)
    </div>
   
    <hr />
    <br /> <br /> <br />
    <div class="col-xs-12 text-center">
        <br />
        <br />
        <br />
        <button id="Save" type="submit" class="btn btn-warning btn-lg" name="Save">&nbsp;Save&nbsp;</button>
        &nbsp&nbsp&nbsp           &nbsp&nbsp&nbsp
           &nbsp&nbsp&nbsp
    </div>
}

