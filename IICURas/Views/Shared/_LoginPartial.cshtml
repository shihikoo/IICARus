@if (Request.IsAuthenticated)
{
    <text>
    <ul>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                @User.Identity.Name
                <i class="fa fa-gear"></i>

            </a>
            <ul class="dropdown-menu top-right-menu">
                <li>
                    @Html.ActionLink("Edit Profile", "Edit", "Account", routeValues: new { username = User.Identity.Name }, htmlAttributes: new { @class = "" })
                </li>
                <li>
                    @Html.ActionLink("Change Password", "Manage", "Account", routeValues: new { username = User.Identity.Name }, htmlAttributes: new { @class = "" })
                </li>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
           
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="logoff">Log off</a>
                    </li>
                }
            </ul>
        </li>
    </ul>
    </text>
}
else
{
    <ul>
        <li style="display: inline-block">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })

        </li>
        &nbsp &nbsp 
        <li style="display: inline-block">@Html.ActionLink("Sign Up", "Register", "Account", null, new { id = "registerlink" })</li>

    </ul>
}
